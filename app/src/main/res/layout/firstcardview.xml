<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="310dp"
        app:cardElevation="25dp"
        app:cardCornerRadius="2dp"
        android:layout_margin="8dp"
        android:id="@+id/card">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="310dp">
                <RelativeLayout
                    android:id="@+id/img_layout"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="250dp">
                            <ImageView
                        android:id="@+id/bimage"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/develop"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#3F51B5"
                            android:elevation="2dp"
                            android:textSize="20dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="8dp"
                            android:textStyle="bold"
                            android:text="@string/app_name"/>
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:visibility="gone"
                            android:paddingBottom="8dp"
                            android:lineSpacingExtra="2.5dp"
                            android:id="@+id/first_card_title"
                            android:textAlignment="center"
                            android:background="@color/card"
                            android:layout_marginRight="8dp"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/white"
                            android:text="အိပ္စက္ျခင္းအိပ္စက္ျခင္းအိပ္စက္ျခင္း"/>

                    </RelativeLayout>
                    <!--<ImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/bimage"
                        android:scaleType="centerInside"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/develop"/>-->
                    <ImageView
                        android:id="@+id/development_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_refresh_icon"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/development_loading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_centerInParent="true" />

            </RelativeLayout>

            <!--android:layout_weight="9.15"-->
            <!--<view
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="#ffdd44"/>
-->        <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="#5eb6ba"

            />-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/img_layout"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Second"
                    android:textSize="17sp"
                    android:textColor="#3F51B5"
                    android:id="@+id/tdetil"
                    android:textAlignment="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"

                    />
                <!--<ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/favorite1"
                    android:id="@+id/imgfav"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />-->
            </RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>